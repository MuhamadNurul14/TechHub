<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TechHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- NoActionBar theme -->
    <style name="Theme.TechHub.NoActionBar" parent="Theme.TechHub">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.TechHub.Splash" parent="Theme.TechHub.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_splash</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Button Styles -->
    <style name="Theme.TechHub.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.TechHub.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">28dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card Styles -->
    <style name="Theme.TechHub.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Theme.TechHub.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
